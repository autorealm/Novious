<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackgroundBorderless"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rank"
        android:layout_width="21.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:gravity="left"
        android:textSize="15sp"
        android:textColor="@color/gray_dark"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cover"
        xmlns:fresco="http://schemas.android.com/apk/com.facebook.drawee"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rank"
        android:scaleType="centerCrop"
        fresco:aspectRadioHeight="10"
        fresco:aspectRadioWidth="16"
        fresco:placeholderImage="@color/gray_light"
        fresco:scaleViewType="fitWidth"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_toRightOf="@id/cover"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="?android:textColorPrimary"/>
    <LinearLayout
        android:id="@+id/info_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover"
        android:layout_alignLeft="@id/title"
        android:orientation="horizontal"
        android:paddingBottom="2.0dip">
        <TextView
            android:id="@+id/info_views"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawableLeft="@null"
            android:drawablePadding="2.0dip"
            android:gravity="center_vertical"
            android:minWidth="50.0dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/info_danmakus"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="0.6"
            android:drawableLeft="@null"
            android:drawablePadding="2.0dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>
    <TextView
        android:id="@+id/up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_group"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_marginBottom="4.0dip"
        android:layout_marginTop="4.0dip"
        android:drawableLeft="@null"
        android:drawablePadding="2.0dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColor="?android:textColorSecondary"/>

</RelativeLayout>