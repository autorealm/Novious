<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_large"
    android:clickable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    app:backgroundTint="@drawable/item_background"
    app:elevation="2.0dip">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/com.facebook.drawee"
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        fresco:aspectRadioHeight="10"
        fresco:aspectRadioWidth="16"
        fresco:placeholderImage="@color/gray_light"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:scaleViewType="fitWidth"/>
    <include layout="@layout/include_badges"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover"
        android:maxLines="2"
        android:padding="8.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:textSize="14sp"
        android:textColor="?android:textColorPrimary"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingBottom="8.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColor="?android:textColorTertiary"
        android:visibility="gone"/>

</RelativeLayout>